<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Other customizations -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorError">@color/error</item>
        <item name="colorSurface">@color/surface</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextInputLayout</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
    </style>
    
    <!-- Button style -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Text input style -->
    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
    
    <!-- Bottom navigation style -->
    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemRippleColor">@color/primary_light</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">8dp</item>
    </style>
    
    <!-- Toolbar style -->
    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>
    
    <!-- Card style -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    
    <!-- Chip style -->
    <style name="AppChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="chipIconTint">@color/primary_dark</item>
    </style>
    
    <!-- Text appearance styles -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Progress indicator style -->
    <style name="AppProgressIndicator" parent="Widget.MaterialComponents.ProgressIndicator.Circular.Indeterminate">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/primary_light</item>
    </style>
    
    <!-- Dialog style -->
    <style name="AppAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AppAlertDialogTitleTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppNegativeButtonStyle</item>
    </style>
    
    <style name="AppAlertDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="AppPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <style name="AppNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Tab layout style -->
    <style name="AppTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabSelectedTextColor">@color/accent</item>
        <item name="tabTextColor">@color/text_secondary</item>
    </style>
    
    <!-- Status indicators -->
    <style name="StatusChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconVisible">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="chipMinHeight">24dp</item>
    </style>
    
    <style name="StatusChip.Pending">
        <item name="chipBackgroundColor">@color/status_pending</item>
    </style>
    
    <style name="StatusChip.Approved">
        <item name="chipBackgroundColor">@color/status_approved</item>
    </style>
    
    <style name="StatusChip.Rejected">
        <item name="chipBackgroundColor">@color/status_rejected</item>
    </style>
    
    <!-- Add missing style for progress indicator -->
    <style name="Widget.MaterialComponents.ProgressIndicator.Circular.Indeterminate" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/primary</item>
    </style>
    
    <!-- Missing styles needed for view references -->
    <style name="HeaderText" parent="TextAppearance.CampusFlow.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="SubheaderText" parent="TextAppearance.CampusFlow.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="BodyText" parent="TextAppearance.CampusFlow.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources> 